@model IEnumerable<Lab08.Models.Brand>

@{
    ViewData["Title"] = "Brands";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="card-title mb-0">Brands</h4>
        <p class="card-subtitle">Manage car brands</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="ti ti-plus me-1"></i>Create New
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table mb-0 text-nowrap varient-table align-middle">
                <thead>
                    <tr>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.Country)
                        </th>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.EstablishedYear)
                        </th>
                        <th scope="col" class="px-0 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-0">
                                <h6 class="mb-0 fw-bolder">@Html.DisplayFor(modelItem => item.Name)</h6>
                            </td>
                            <td class="px-0">
                                <span class="text-muted">@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</span>
                            </td>
                            <td class="px-0">
                                <span class="text-muted">@Html.DisplayFor(modelItem => item.Country)</span>
                            </td>
                            <td class="px-0">
                                <span class="text-muted">@item.EstablishedYear.ToString("yyyy")</span>
                            </td>
                            <td class="px-0 text-end">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="ti ti-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="ti ti-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="ti ti-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No brands found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
