@model Lab08.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="card-title mb-0">Delete Car</h4>
        <p class="card-subtitle text-danger">Are you sure you want to delete this?</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="ti ti-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="alert alert-warning" role="alert">
            <i class="ti ti-alert-triangle me-2"></i>
            <strong>Warning!</strong> This action cannot be undone.
        </div>
        
        <dl class="row mb-4">
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.LicensePlate)
            </dt>
            <dd class="col-sm-9 mb-3">
                <h5 class="mb-0 fw-bolder">@Html.DisplayFor(model => model.LicensePlate)</h5>
            </dd>
            <dt class="col-sm-3 mb-3">
                Brand
            </dt>
            <dd class="col-sm-9 mb-3">
                <span class="text-muted">@Html.DisplayFor(model => model.CarModel.Brand.Name)</span>
            </dd>
            <dt class="col-sm-3 mb-3">
                Model
            </dt>
            <dd class="col-sm-9 mb-3">
                <span class="text-muted">@Html.DisplayFor(model => model.CarModel.Name)</span>
            </dd>
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd class="col-sm-9 mb-3">
                <span class="text-muted">@Html.DisplayFor(model => model.Color)</span>
            </dd>
            <dt class="col-sm-3 mb-3">
                @Html.DisplayNameFor(model => model.CurrentPrice)
            </dt>
            <dd class="col-sm-9 mb-3">
                <span class="text-muted">$@Model.CurrentPrice.ToString("N0")</span>
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="ti ti-trash me-1"></i>Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
