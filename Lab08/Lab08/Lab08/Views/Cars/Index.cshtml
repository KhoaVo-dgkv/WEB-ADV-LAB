@model IEnumerable<Lab08.Models.Car>

@{
    ViewData["Title"] = "Cars";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="card-title mb-0">Cars</h4>
        <p class="card-subtitle">Manage cars inventory</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="ti ti-plus me-1"></i>Create New
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table mb-0 text-nowrap varient-table align-middle">
                <thead>
                    <tr>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.LicensePlate)
                        </th>
                        <th scope="col" class="px-0">
                            Brand
                        </th>
                        <th scope="col" class="px-0">
                            Model
                        </th>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.Color)
                        </th>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.Mileage)
                        </th>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.CurrentPrice)
                        </th>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.Condition)
                        </th>
                        <th scope="col" class="px-0">
                            @Html.DisplayNameFor(model => model.IsAvailable)
                        </th>
                        <th scope="col" class="px-0 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-0">
                                <h6 class="mb-0 fw-bolder">@Html.DisplayFor(modelItem => item.LicensePlate)</h6>
                            </td>
                            <td class="px-0">
                                <span class="text-muted">@Html.DisplayFor(modelItem => item.CarModel.Brand.Name)</span>
                            </td>
                            <td class="px-0">
                                <span class="text-muted">@Html.DisplayFor(modelItem => item.CarModel.Name)</span>
                            </td>
                            <td class="px-0">
                                <span class="text-muted">@Html.DisplayFor(modelItem => item.Color)</span>
                            </td>
                            <td class="px-0">
                                <span class="text-muted">@item.Mileage.ToString("N0")</span>
                            </td>
                            <td class="px-0">
                                <span class="text-muted">$@item.CurrentPrice.ToString("N0")</span>
                            </td>
                            <td class="px-0">
                                @{
                                    var conditionClass = "bg-info";
                                    if (item.Condition == "Excellent" || item.Condition == "New")
                                    {
                                        conditionClass = "bg-warning";
                                    }
                                    else if (item.Condition == "Good")
                                    {
                                        conditionClass = "text-bg-primary";
                                    }
                                }
                                <span class="badge @conditionClass">@Html.DisplayFor(modelItem => item.Condition)</span>
                            </td>
                            <td class="px-0">
                                @if (item.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Not Available</span>
                                }
                            </td>
                            <td class="px-0 text-end">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="ti ti-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="ti ti-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="ti ti-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">No cars found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
