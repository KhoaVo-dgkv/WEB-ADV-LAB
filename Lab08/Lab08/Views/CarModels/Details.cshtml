@model Lab08.Models.CarModel

@{
    ViewData["Title"] = "Car Model Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="card-title mb-0">Car Model Details</h4>
        <p class="card-subtitle">View car model information</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="ti ti-edit me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="ti ti-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3 mb-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-9 mb-3">
                        <h5 class="mb-0 fw-bolder">@Html.DisplayFor(model => model.Name)</h5>
                    </dd>
                    <dt class="col-sm-3 mb-3">
                        @Html.DisplayNameFor(model => model.Brand)
                    </dt>
                    <dd class="col-sm-9 mb-3">
                        <span class="text-muted">@Html.DisplayFor(model => model.Brand.Name)</span>
                    </dd>
                    <dt class="col-sm-3 mb-3">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-9 mb-3">
                        <span class="text-muted">@Html.DisplayFor(model => model.Description)</span>
                    </dd>
                    <dt class="col-sm-3 mb-3">
                        @Html.DisplayNameFor(model => model.Year)
                    </dt>
                    <dd class="col-sm-9 mb-3">
                        <span class="text-muted">@Html.DisplayFor(model => model.Year)</span>
                    </dd>
                    <dt class="col-sm-3 mb-3">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-9 mb-3">
                        <span class="text-muted">$@Model.Price.ToString("N0")</span>
                    </dd>
                    <dt class="col-sm-3 mb-3">
                        @Html.DisplayNameFor(model => model.Engine)
                    </dt>
                    <dd class="col-sm-9 mb-3">
                        <span class="text-muted">@Html.DisplayFor(model => model.Engine)</span>
                    </dd>
                    <dt class="col-sm-3 mb-3">
                        @Html.DisplayNameFor(model => model.FuelType)
                    </dt>
                    <dd class="col-sm-9 mb-3">
                        <span class="text-muted">@Html.DisplayFor(model => model.FuelType)</span>
                    </dd>
                    <dt class="col-sm-3 mb-3">
                        @Html.DisplayNameFor(model => model.Transmission)
                    </dt>
                    <dd class="col-sm-9 mb-3">
                        <span class="text-muted">@Html.DisplayFor(model => model.Transmission)</span>
                    </dd>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <dt class="col-sm-3 mb-3">
                            Image
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 300px;" />
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>

@if (Model.Cars.Any())
{
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title mb-4">Available Cars (@Model.Cars.Count)</h5>
            <div class="table-responsive">
                <table class="table mb-0 text-nowrap varient-table align-middle">
                    <thead>
                        <tr>
                            <th scope="col" class="px-0">License Plate</th>
                            <th scope="col" class="px-0">Color</th>
                            <th scope="col" class="px-0">Mileage</th>
                            <th scope="col" class="px-0">Current Price</th>
                            <th scope="col" class="px-0">Condition</th>
                            <th scope="col" class="px-0">Available</th>
                            <th scope="col" class="px-0 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model.Cars)
                        {
                            <tr>
                                <td class="px-0">
                                    <h6 class="mb-0 fw-bolder">@car.LicensePlate</h6>
                                </td>
                                <td class="px-0">
                                    <span class="text-muted">@car.Color</span>
                                </td>
                                <td class="px-0">
                                    <span class="text-muted">@car.Mileage.ToString("N0")</span>
                                </td>
                                <td class="px-0">
                                    <span class="text-muted">$@car.CurrentPrice.ToString("N0")</span>
                                </td>
                                <td class="px-0">
                                    <span class="badge bg-info">@car.Condition</span>
                                </td>
                                <td class="px-0">
                                    @if (car.IsAvailable)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">No</span>
                                    }
                                </td>
                                <td class="px-0 text-end">
                                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-info">
                                        <i class="ti ti-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
