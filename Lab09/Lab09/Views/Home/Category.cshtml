@{
    ViewData["Title"] = "Category Management";
}

<div class="container mt-4">
    <h2>Category Management</h2>
    
    <div class="row">
        <div class="col-md-4">
            <h4>Create/Edit Category</h4>
            <form id="categoryForm">
                <input type="hidden" id="editCategoryId" value="">
                <div class="mb-3">
                    <label for="categoryName" class="form-label">Category Name</label>
                    <input type="text" class="form-control" id="categoryName" placeholder="Enter category name" required>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-fill" id="categorySubmitBtn">Create Category</button>
                    <button type="button" class="btn btn-secondary" id="categoryCancelBtn" style="display:none;">Cancel</button>
                </div>
            </form>
            
            <div id="categoryMessage" class="mt-3"></div>
        </div>
        
        <div class="col-md-8">
            <h4>Categories List</h4>
            <div id="categoriesList"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/app.js"></script>
    <script>
        // Load categories on page load
        $(document).ready(function() {
            loadCategories();
        });
        
        // Load categories from API
        function loadCategories() {
            $.ajax({
                url: `${API_BASE_URL}/categories`,
                method: 'GET',
                success: function(response) {
                    if (response.success && response.data) {
                        displayCategories(response.data);
                    } else {
                        showMessage('#categoryMessage', 'Error loading categories: ' + (response.message || 'Unknown error'), 'danger');
                    }
                },
                error: function(xhr) {
                    let errorMsg = 'Failed to load categories.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }
                    showMessage('#categoryMessage', errorMsg, 'danger');
                }
            });
        }
        
        // Display categories
        function displayCategories(categories) {
            const container = $('#categoriesList');
            if (categories.length === 0) {
                container.html('<p class="text-muted">No categories found.</p>');
                return;
            }
            
            let html = '<div class="list-group">';
            categories.forEach(function(category) {
                const categoryNameEscaped = escapeHtml(category.name);
                html += `
                    <div class="list-group-item d-flex justify-content-between align-items-center" data-category-id="${category.id}">
                        <div>
                            <h6 class="mb-1">${categoryNameEscaped}</h6>
                            <small class="text-muted">ID: ${category.id}</small>
                        </div>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary btn-edit-category" data-category-id="${category.id}" data-category-name="${categoryNameEscaped}">Edit</button>
                            <button class="btn btn-outline-danger btn-delete-category" data-category-id="${category.id}" data-category-name="${categoryNameEscaped}">Delete</button>
                        </div>
                    </div>
                `;
            });
            html += '</div>';
            container.html(html);
            
            // Attach event listeners
            $(document).off('click', '.btn-edit-category').on('click', '.btn-edit-category', function() {
                const id = $(this).data('category-id');
                const name = $(this).data('category-name');
                editCategory(id, name);
            });
            
            $(document).off('click', '.btn-delete-category').on('click', '.btn-delete-category', function() {
                const id = $(this).data('category-id');
                const name = $(this).data('category-name');
                deleteCategory(id, name);
            });
        }
        
        // Handle category form submission
        $('#categoryForm').on('submit', function(e) {
            e.preventDefault();
            
            const categoryId = $('#editCategoryId').val();
            const categoryName = $('#categoryName').val().trim();
            
            if (!categoryName) {
                showMessage('#categoryMessage', 'Category name is required.', 'danger');
                return;
            }
            
            const categoryData = {
                name: categoryName
            };
            
            if (categoryId) {
                // Update category
                updateCategory(categoryId, categoryData);
            } else {
                // Create category
                createCategory(categoryData);
            }
        });
        
        // Cancel edit mode
        $('#categoryCancelBtn').on('click', function() {
            resetCategoryForm();
        });
        
        // Create category
        function createCategory(categoryData) {
            $.ajax({
                url: `${API_BASE_URL}/categories`,
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(categoryData),
                success: function(response) {
                    if (response.success) {
                        showMessage('#categoryMessage', 'Category created successfully!', 'success');
                        resetCategoryForm();
                        loadCategories();
                    } else {
                        const errorMsg = response.errorCode ? 
                            `Error (${response.errorCode}): ${response.message}` : 
                            response.message || 'Unknown error';
                        showMessage('#categoryMessage', errorMsg, 'danger');
                    }
                },
                error: function(xhr) {
                    let errorMsg = 'Failed to create category.';
                    if (xhr.responseJSON) {
                        const response = xhr.responseJSON;
                        errorMsg = response.errorCode ? 
                            `Error (${response.errorCode}): ${response.message}` : 
                            response.message || errorMsg;
                    }
                    showMessage('#categoryMessage', `HTTP ${xhr.status}: ${errorMsg}`, 'danger');
                }
            });
        }
        
        // Update category
        function updateCategory(id, categoryData) {
            $.ajax({
                url: `${API_BASE_URL}/categories/${id}`,
                method: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(categoryData),
                success: function(response) {
                    if (response.success) {
                        showMessage('#categoryMessage', 'Category updated successfully!', 'success');
                        resetCategoryForm();
                        loadCategories();
                    } else {
                        const errorMsg = response.errorCode ? 
                            `Error (${response.errorCode}): ${response.message}` : 
                            response.message || 'Unknown error';
                        showMessage('#categoryMessage', errorMsg, 'danger');
                    }
                },
                error: function(xhr) {
                    let errorMsg = 'Failed to update category.';
                    if (xhr.responseJSON) {
                        const response = xhr.responseJSON;
                        errorMsg = response.errorCode ? 
                            `Error (${response.errorCode}): ${response.message}` : 
                            response.message || errorMsg;
                    }
                    showMessage('#categoryMessage', `HTTP ${xhr.status}: ${errorMsg}`, 'danger');
                }
            });
        }
        
        // Edit category
        function editCategory(id, name) {
            $('#editCategoryId').val(id);
            $('#categoryName').val(name);
            $('#categorySubmitBtn').text('Update Category');
            $('#categoryCancelBtn').show();
            $('#categoryName').focus();
        }
        
        // Delete category
        function deleteCategory(id, name) {
            if (!confirm(`Are you sure you want to delete category "${name}"?`)) {
                return;
            }
            
            $.ajax({
                url: `${API_BASE_URL}/categories/${id}`,
                method: 'DELETE',
                success: function(response) {
                    if (response.success) {
                        showMessage('#categoryMessage', 'Category deleted successfully!', 'success');
                        loadCategories();
                    } else {
                        const errorMsg = response.errorCode ? 
                            `Error (${response.errorCode}): ${response.message}` : 
                            response.message || 'Unknown error';
                        showMessage('#categoryMessage', errorMsg, 'danger');
                    }
                },
                error: function(xhr) {
                    let errorMsg = 'Failed to delete category.';
                    if (xhr.responseJSON) {
                        const response = xhr.responseJSON;
                        errorMsg = response.errorCode ? 
                            `Error (${response.errorCode}): ${response.message}` : 
                            response.message || errorMsg;
                    }
                    showMessage('#categoryMessage', `HTTP ${xhr.status}: ${errorMsg}`, 'danger');
                }
            });
        }
        
        // Reset category form
        function resetCategoryForm() {
            $('#categoryForm')[0].reset();
            $('#editCategoryId').val('');
            $('#categorySubmitBtn').text('Create Category');
            $('#categoryCancelBtn').hide();
        }
    </script>
}

